{% extends '@FSiAdminSecurity/layout.html.twig' %}

{% block themes %}
    {% form_theme form 'bootstrap_3_layout.html.twig' %}
{% endblock %}

{% block body %}
    {% if app.request.hasPreviousSession %}
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="alert flash {{ type }}">
                    {{ message|trans({}, 'FSiAdminSecurity') }}
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}

    {{ form_start(form, {'attr': {'class': 'form-signin'}}) }}
    {{ form_widget(form) }}
    <input type="submit" class="btn btn-lg btn-primary btn-block" value="{{ 'admin.password_reset.request.form.button.send'|trans({}, 'FSiAdminSecurity') }}" />
    {{ form_end(form) }}
{% endblock %}
