<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="admin_security.controller.security.class">FSi\Bundle\AdminSecurityBundle\Controller\SecurityController</parameter>
        <parameter key="admin_security.controller.activation.class">FSi\Bundle\AdminSecurityBundle\Controller\ActivationController</parameter>
        <parameter key="admin_security.controller.password_reset.request.class">FSi\Bundle\AdminSecurityBundle\Controller\PasswordReset\ResetRequestController</parameter>
        <parameter key="admin_security.controller.password_reset.change_password.class">FSi\Bundle\AdminSecurityBundle\Controller\PasswordReset\ChangePasswordController</parameter>
        <parameter key="admin_security.controller.admin.class">FSi\Bundle\AdminSecurityBundle\Controller\AdminController</parameter>
        <parameter key="admin_security.mailer.message_factory.class">FSi\Bundle\AdminSecurityBundle\Mailer\TwigSwiftMessageFactory</parameter>
        <parameter key="admin_security.mailer.activation.class">FSi\Bundle\AdminSecurityBundle\Mailer\TwigSwiftMailer</parameter>
        <parameter key="admin_security.mailer.password_reset.class">FSi\Bundle\AdminSecurityBundle\Mailer\TwigSwiftMailer</parameter>
        <parameter key="admin_security.form.type.change_password.class">FSi\Bundle\AdminSecurityBundle\Form\Type\Admin\ChangePasswordType</parameter>
        <parameter key="admin_security.form.type.password_reset.request.class">FSi\Bundle\AdminSecurityBundle\Form\Type\PasswordReset\RequestType</parameter>
        <parameter key="admin_security.form.type.password_reset.change_password.class">FSi\Bundle\AdminSecurityBundle\Form\Type\PasswordReset\ChangePasswordType</parameter>
        <parameter key="admin_security.listener.doctrine_user_listener.class">FSi\Bundle\AdminSecurityBundle\EventListener\DoctrineUserListener</parameter>
        <parameter key="admin_security.listener.user_encode_password_listener.class">FSi\Bundle\AdminSecurityBundle\EventListener\UserEncodePasswordListener</parameter>
        <parameter key="admin_security.listener.activate_user_listener.class">FSi\Bundle\AdminSecurityBundle\EventListener\ActivateUserListener</parameter>
        <parameter key="admin_security.listener.deactivate_user_listener.class">FSi\Bundle\AdminSecurityBundle\EventListener\DeactivateUserListener</parameter>
        <parameter key="admin_security.listener.user_created.class">FSi\Bundle\AdminSecurityBundle\EventListener\UserCreatedListener</parameter>
        <parameter key="admin_security.listener.user_password_changed.class">FSi\Bundle\AdminSecurityBundle\EventListener\UserPasswordChangedListener</parameter>
        <parameter key="admin_security.listener.last_login_listener.class">FSi\Bundle\AdminSecurityBundle\EventListener\LastLoginListener</parameter>
        <parameter key="admin_security.listener.enforce_password_change.class">FSi\Bundle\AdminSecurityBundle\EventListener\EnforcePasswordChangeListener</parameter>
        <parameter key="admin_security.listener.enforce_password_change.change_password_route">fsi_admin_change_password</parameter>
        <parameter key="admin_security.listener.activation_mailer_listener.class">FSi\Bundle\AdminSecurityBundle\EventListener\ActivationMailerListener</parameter>
        <parameter key="admin_security.listener.reset_password_request_mailer_listener.class">FSi\Bundle\AdminSecurityBundle\EventListener\ResetPasswordRequestMailerListener</parameter>
        <parameter key="admin_security.listener.secured_element_listener.class">FSi\Bundle\AdminSecurityBundle\EventListener\SecuredElementListener</parameter>
        <parameter key="admin_security.listener.tools_menu_listener.class">FSi\Bundle\AdminSecurityBundle\EventListener\ToolsMenuListener</parameter>
        <parameter key="admin_security.token_factory.activation.class">FSi\Bundle\AdminSecurityBundle\Security\Token\TokenFactory</parameter>
        <parameter key="admin_security.token_factory.password_reset.class">FSi\Bundle\AdminSecurityBundle\Security\Token\TokenFactory</parameter>
        <parameter key="admin_security.firewall_mapper.class">FSi\Bundle\AdminSecurityBundle\Security\Firewall\FirewallMapper</parameter>
    </parameters>

    <services>
        <!-- Controllers -->
        <service id="admin_security.controller.security" class="%admin_security.controller.security.class%">
            <argument type="service" id="templating" />
            <argument type="service" id="security.authentication_utils" />
            <argument type="string">%admin_security.templates.login%</argument>
        </service>

        <service id="admin_security.controller.activation" class="%admin_security.controller.activation.class%">
            <argument type="service" id="templating" />
            <argument type="string">%admin_security.templates.password_reset.change_password%</argument>
            <argument type="service" id="admin_security.repository.user"/>
            <argument type="service" id="router"/>
            <argument type="service" id="form.factory"/>
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="admin_security.controller.password_reset.request" class="%admin_security.controller.password_reset.request.class%">
            <argument type="service" id="templating" />
            <argument type="string">%admin_security.templates.password_reset.request%</argument>
            <argument type="service" id="form.factory"/>
            <argument type="service" id="router"/>
            <argument type="service" id="admin_security.repository.user"/>
            <argument type="service" id="admin_security.token_factory.password_reset"/>
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="admin_security.controller.password_reset.change_password" class="%admin_security.controller.password_reset.change_password.class%">
            <argument type="service" id="templating" />
            <argument type="string">%admin_security.templates.password_reset.change_password%</argument>
            <argument type="service" id="admin_security.repository.user"/>
            <argument type="service" id="router"/>
            <argument type="service" id="form.factory"/>
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="admin_security.controller.admin" class="%admin_security.controller.admin.class%">
            <argument type="service" id="templating" />
            <argument type="service" id="form.factory" />
            <argument type="service" id="security.context" />
            <argument type="service" id="router" />
            <argument type="service" id="event_dispatcher" />
            <argument type="string">%admin_security.templates.change_password%</argument>
        </service>

        <!-- Mailer -->
        <service id="admin_security.mailer.message_factory" class="%admin_security.mailer.message_factory.class%">
            <argument type="service" id="twig" />
            <argument type="service" id="request_stack" />
        </service>

        <service id="admin_security.mailer.activation" class="%admin_security.mailer.activation.class%">
            <argument type="service" id="swiftmailer.mailer" />
            <argument type="service" id="admin_security.mailer.message_factory" />
            <argument type="string">%admin_security.activation.mailer.template%</argument>
            <argument type="string">%admin_security.activation.mailer.from%</argument>
            <argument type="string">%admin_security.activation.mailer.reply_to%</argument>
        </service>

        <service id="admin_security.mailer.password_reset" class="%admin_security.mailer.password_reset.class%">
            <argument type="service" id="swiftmailer.mailer" />
            <argument type="service" id="admin_security.mailer.message_factory" />
            <argument type="string">%admin_security.password_reset.mailer.template%</argument>
            <argument type="string">%admin_security.password_reset.mailer.from%</argument>
            <argument type="string">%admin_security.password_reset.mailer.reply_to%</argument>
        </service>

        <!-- Forms -->
        <service id="admin_security.form.change_password.type" class="%admin_security.form.type.change_password.class%">
            <tag name="form.type" alias="admin_change_password" />
        </service>

        <service id="admin_security.form.type.password_reset.request" class="%admin_security.form.type.password_reset.request.class%">
            <tag name="form.type" alias="admin_password_reset_request" />
        </service>

        <service id="admin_security.form.type.password_reset.change_password" class="%admin_security.form.type.password_reset.change_password.class%">
            <tag name="form.type" alias="admin_password_reset_change_password" />
        </service>

        <!-- Event listeners -->
        <service id="admin_security.listener.user_encode_password_listener" class="%admin_security.listener.user_encode_password_listener.class%">
            <argument type="service" id="security.encoder_factory" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="admin_security.listener.activate_user_listener" class="%admin_security.listener.activate_user_listener.class%">
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="admin_security.listener.deactivate_user_listener" class="%admin_security.listener.deactivate_user_listener.class%">
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="admin_security.listener.user_created" class="%admin_security.listener.user_created.class%">
            <argument type="service" id="admin_security.token_factory.activation" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="admin_security.listener.user_password_changed" class="%admin_security.listener.user_password_changed.class%">
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="admin_security.listener.enforce_password_change" class="%admin_security.listener.enforce_password_change.class%">
            <argument type="service" id="admin_security.firewall_mapper"/>
            <argument type="service" id="security.authorization_checker"/>
            <argument type="service" id="security.token_storage"/>
            <argument type="service" id="router"/>
            <argument type="string">%admin_security.firewall_name%</argument>
            <argument type="string">%admin_security.listener.enforce_password_change.change_password_route%</argument>
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="admin_security.listener.last_login_listener" class="%admin_security.listener.last_login_listener.class%">
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="admin_security.listener.activation_mailer_listener" class="%admin_security.listener.activation_mailer_listener.class%">
            <argument type="service" id="admin_security.mailer.activation"/>
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="admin_security.listener.reset_password_request_mailer_listener" class="%admin_security.listener.reset_password_request_mailer_listener.class%">
            <argument type="service" id="admin_security.mailer.password_reset"/>
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="admin_security.listener.secured_element_listener" class="%admin_security.listener.secured_element_listener.class%">
            <argument type="service" id="admin.manager" />
            <argument type="service" id="security.context" />
            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" priority="0"/>
        </service>

        <service id="admin_security.listener.tools_menu_listener" class="%admin_security.listener.tools_menu_listener.class%">
            <argument type="service" id="translator" />
            <argument type="service" id="security.context" />
            <tag name="kernel.event_listener" event="fsi_admin.menu.tools" method="createAccountMenu" />
        </service>

        <service id="admin_security.listener.doctrine_user_listener" class="%admin_security.listener.doctrine_user_listener.class%">
            <argument type="service" id="doctrine" />
            <tag name="kernel.event_subscriber" />
        </service>

        <!-- factories -->
        <service id="admin_security.token_factory.activation" class="%admin_security.token_factory.activation.class%">
            <argument type="service" id="security.secure_random" />
            <argument type="string">%admin_security.activation.token_ttl%</argument>
            <argument type="string">%admin_security.activation.token_length%</argument>
        </service>

        <service id="admin_security.token_factory.password_reset" class="%admin_security.token_factory.password_reset.class%">
            <argument type="service" id="security.secure_random" />
            <argument type="string">%admin_security.password_reset.token_ttl%</argument>
            <argument type="string">%admin_security.password_reset.token_length%</argument>
        </service>

        <!-- Security -->
        <service id="admin_security.firewall_mapper" class="%admin_security.firewall_mapper.class%">
            <argument type="collection"></argument>
        </service>
    </services>

</container>
